# ============================================================================
# LLM PROVIDER CONFIGURATION
# ============================================================================

# Provider: gpt, claude, local
LLM_PROVIDER=gpt

# ============================================================================
# OPENAI CONFIGURATION (si LLM_PROVIDER=gpt)
# ============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ============================================================================
# ANTHROPIC CONFIGURATION (si LLM_PROVIDER=claude)
# ============================================================================
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ============================================================================
# OLLAMA CONFIGURATION (si LLM_PROVIDER=local)
# ============================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_TITLE=Depression Detection API
API_VERSION=1.0.0
API_DESCRIPTION=API de détection de dépression utilisant des LLM
LOG_LEVEL=INFO

# ============================================================================
# SECURITY (optionnel)
# ============================================================================
